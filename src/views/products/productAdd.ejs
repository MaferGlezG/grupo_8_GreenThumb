<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
        <link rel="stylesheet" href="http://localhost:3333/css/productDetail.css">
        <title>Añadir producto</title>
</head>

<body>
    <%- include('../partials/header') %>
        <main>
            <div class="contenedor">
                <section>
                    <div class="columns is-centered">
                        <div class="column is-6">
                            <h1>Crea tu producto</h1>
                            <form action="/product/add" method="POST" enctype="multipart/form-data">

                                <div class="field">
                                    <label for="name">Nombre del producto</label>
                                    <div class="control">
                                        <input type="text" name="name" id="name">
                                    </div>
                                    <p class="feedback"></p>
                                </div>

                                <div class="field">
                                    <label for="description">Descripción del producto</label>
                                    <div class="control">
                                        <input type="text" name="description" id="description">
                                    </div>
                                    <p class="feedback"></p>
                                </div>

                                <div class="mb-3">
                                    <label for="formFile" class="form-label">Imagen del producto</label>
                                    <input class="form-control" type="file" name="formFile" id="formFile">
                                </div>

                                <label for="color" class="form-label">Color del producto</label>
                                <input type="color" class="form-control form-control-color" id="color" value="#03802c"
                                    title="Color" name="color">

                                <div class="field">
                                    <label for="price">Precio del producto</label>
                                    <div class="control">
                                        <input type="text" name="price" id="price">
                                    </div>
                                    <p class="feedback"></p>
                                </div>

                                <select class="form-label" aria-label="Default select example" name="category"
                                    id="category">
                                    <option selected>Categoría del producto</option>
                                    <% for (let i=0; i < categorias.length; i++) { %>
                                        <option value=<%=categorias[i].id%>>
                                            <%=categorias[i].name%>
                                        </option>

                                        <% } %>
                                            <!--<option value="1">Medicinales</option>
                                    <option value="2">Decorativas</option>
                                    <option value="3">Low Maintenance</option>
                                    <option value="4">Gourmet</option>-->
                                </select>

                                <select class="form-label" aria-label="Default select example" name="size" id="size">
                                    <option selected>Tamaño del producto</option>
                                    <% for (let i=0; i < tallas.length; i++) { %>
                                        <option value=<%=tallas[i].id%>>
                                            <%=tallas[i].name%>
                                        </option>
                                        <% } %>
                                            <!--<option value="1">Tamaño 1</option>
                                    <option value="2">Tamaño 2</option>
                                    <option value="3">Tamaño 3</option>-->

                                </select>

                                <div class="field">
                                    <div class="control">
                                        <button type="submit">Crear producto</button>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </section>
            </div>
        </main>
        <%- include('../partials/footer') %>
</body>

</html>